<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/padding">
        <shape>
            <solid android:color="@color/transparent"/>
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"/>
        </shape>
    </item>
    <item android:id="@+id/shadow">
        <shape>
            <solid android:color="@color/silver"/>
            <padding android:bottom="2px"/>
        </shape>
    </item>
    <item android:id="@+id/face">
        <shape>
            <stroke
                android:width="1px"
                android:color="@color/darkgray"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
    <item android:id="@+id/state">
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/deepskyblue"/>
                </shape>
            </item>
            <item android:state_focused="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/ghostwhite"/>
                </shape>
            </item>
        </selector>
    </item>
    <item android:id="@+id/child">
        <shape>
            <solid android:color="@color/transparent"/>
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"/>
        </shape>
    </item>
</layer-list>