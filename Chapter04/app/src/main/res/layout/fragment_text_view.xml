<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/layout_space"
    android:gravity="center"
    tools:context="chapter04.android.learn10.yokmama.com.chapter04.fragment.TextViewFragment">

    <!-- シンプルな使い方-->
    <TextView
        android:id="@+id/textNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_space"
        android:text="Normal Text"/>

    <!-- 文字の色を変更-->
    <TextView
        android:id="@+id/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_space"
        android:background="#FF0000"
        android:text="Color Text"
        android:textColor="#000000"/>

    <!-- 文字のサイズを変更-->
    <TextView
        android:id="@+id/textSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_space"
        android:text="Size Text"
        android:textSize="20sp"/>

    <!-- 文字のスタイルを変更-->
    <TextView
        android:id="@+id/textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_space"
        android:text="Style Text"
        android:textStyle="bold"/>

    <!-- 文字を複数行で表示-->
    <TextView
        android:id="@+id/textMulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_space"
        android:maxLines="3"
        android:text="@string/text_irohani"/>

    <!-- 文字が長い場合に省略-->
    <TextView
        android:id="@+id/textEllipsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_space"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/text_irohani"/>

    <!-- 文字が長い場合にマーキー表示-->
    <TextView
        android:id="@+id/textMarquee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_space"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="@string/text_irohani"/>

    <!-- 文字の表示位置を変更-->
    <TextView
        android:id="@+id/textGravity"
        android:layout_width="200dp"
        android:layout_height="64dip"
        android:layout_margin="@dimen/item_space"
        android:gravity="bottom|right"
        android:text="gravity Text"/>

    <!-- 文字に取り消し線を設定（プログラムで設定）-->
    <TextView
        android:id="@+id/textRevoke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_space"
        android:text="取り消し線"/>
</LinearLayout>
