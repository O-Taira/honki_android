<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransitionActivity">

    <View
        android:id="@+id/fake_view"
        android:layout_width="168dp"
        android:layout_height="168dp"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <Button
        android:id="@+id/action_pink"
        style="@style/fab"
        android:layout_alignTop="@id/fake_view"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/action_light_green"
        style="@style/fab"
        android:layout_alignStart="@id/fake_view"
        android:layout_alignBottom="@id/fake_view" />

    <Button
        android:id="@+id/action_blue"
        style="@style/fab"
        android:layout_alignEnd="@id/fake_view"
        android:layout_alignBottom="@id/fake_view" />

</RelativeLayout>