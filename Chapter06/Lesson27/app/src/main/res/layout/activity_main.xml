<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/preview"
        style="@style/preview"
        android:layout_width="match_parent"
        android:layout_height="140dp" />

    <View
        android:id="@+id/fabFrame"
        android:layout_below="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="?attr/colorPrimary" />

    <GridLayout
        android:layout_below="@+id/fabFrame"
        android:id="@+id/calcFrame"
        android:useDefaultMargins="false"
        android:rowOrderPreserved="false"
        android:alignmentMode="alignBounds"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="4">

        <Button
            android:id="@+id/button7"
            style="@style/calcButton"
            android:layout_column="0"
            android:layout_row="0"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            style="@style/calcButton"
            android:layout_column="1"
            android:layout_row="0"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            style="@style/calcButton"
            android:layout_column="2"
            android:layout_row="0"
            android:text="9" />

        <Button
            android:id="@+id/button4"
            style="@style/calcButton"
            android:layout_column="0"
            android:layout_row="1"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            style="@style/calcButton"
            android:layout_column="1"
            android:layout_row="1"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            style="@style/calcButton"
            android:layout_row="1"
            android:text="6" />

        <Button
            android:id="@+id/button1"
            style="@style/calcButton"
            android:layout_column="0"
            android:layout_row="2"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            style="@style/calcButton"
            android:layout_column="1"
            android:layout_row="2"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            style="@style/calcButton"
            android:layout_column="2"
            android:layout_row="2"
            android:text="3" />

        <Button
            android:id="@+id/dot"
            style="@style/calcButton"
            android:layout_column="0"
            android:layout_row="3"
            android:text="." />

        <Button
            android:id="@+id/button0"
            style="@style/calcButton"
            android:layout_column="1"
            android:layout_row="3"
            android:text="0" />

        <Button
            android:id="@+id/equal"
            style="@style/calcButton"
            android:layout_column="2"
            android:layout_row="3"
            android:text="=" />


        <Button
            android:id="@+id/quotient"
            style="@style/calcButton"
            android:layout_column="3"
            android:layout_row="0"
            android:text="รท" />

        <Button
            android:id="@+id/product"
            style="@style/calcButton"
            android:layout_column="3"
            android:layout_row="1"
            android:text="ร" />

        <Button
            android:id="@+id/difference"
            style="@style/calcButton"
            android:layout_column="3"
            android:layout_row="2"
            android:text="-" />

        <Button
            android:id="@+id/sum"
            style="@style/calcButton"
            android:layout_column="3"
            android:layout_row="3"
            android:text="+" />
    </GridLayout>

    <Button
        android:id="@+id/clear"
        style="@style/Lesson27.fab"
        android:text="DEL"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/selector_fab"
        android:layout_alignBottom="@+id/fabFrame"
        android:layout_alignRight="@+id/preview"
        android:layout_alignEnd="@+id/preview" />
</RelativeLayout>
