<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="preview" parent="android:Widget.TextView">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/md_grey_800</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="fab" parent="android:Widget.Button">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/selector_fab</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="calcButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
