<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light">
        <!-- Customize your theme here. -->
    </style>

    <!--アクセントカラー-->
    <color name="material_grey_600">#757575</color>
    <color name="colorAccent">#cddc39</color>

    <!-- FloatingActionButtonのスタイル -->
    <style name="fab" parent="android:Widget.Button">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/selector_fab</item>
    </style>

    <!--計算Buttonのスタイル-->
    <style name="calcButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
