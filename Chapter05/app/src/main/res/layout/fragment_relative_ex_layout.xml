<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yokmama.learn10.chapter05.android.fragment.RelativeLayoutFragment">

    <Button
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="center"
        android:textSize="9sp"
        android:id="@+id/buttonCenter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="above|left"
        android:id="@+id/textView1"
        android:textSize="9sp"
        android:layout_above="@+id/buttonCenter"
        android:layout_toLeftOf="@+id/buttonCenter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="above|right"
        android:id="@+id/textView2"
        android:textSize="9sp"
        android:layout_above="@+id/buttonCenter"
        android:layout_toRightOf="@+id/buttonCenter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="below|left"
        android:id="@+id/textView3"
        android:layout_below="@+id/buttonCenter"
        android:textSize="9sp"
        android:layout_toLeftOf="@+id/buttonCenter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="below|right"
        android:id="@+id/textView4"
        android:textSize="9sp"
        android:layout_below="@+id/buttonCenter"
        android:layout_toRightOf="@+id/buttonCenter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="below|center"
        android:id="@+id/textView"
        android:textSize="9sp"
        android:layout_below="@+id/buttonCenter"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="left|center"
        android:id="@+id/textView5"
        android:textSize="9sp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/buttonCenter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="right|center"
        android:id="@+id/textView6"
        android:textSize="9sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/buttonCenter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="top|center"
        android:id="@+id/textView7"
        android:textSize="9sp"
        android:layout_alignTop="@+id/textView1"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bottom|right"
        android:id="@+id/textView8"
        android:textSize="9sp"
        android:layout_alignBottom="@+id/buttonCenter"
        android:layout_toRightOf="@+id/textView6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="top|right"
        android:id="@+id/textView9"
        android:textSize="9sp"
        android:layout_alignTop="@+id/buttonCenter"
        android:layout_toRightOf="@+id/textView6"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bottom|left"
        android:id="@+id/textView14"
        android:textSize="9sp"
        android:layout_alignBottom="@+id/buttonCenter"
        android:layout_toLeftOf="@+id/textView5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="top|left"
        android:id="@+id/textView15"
        android:textSize="9sp"
        android:layout_alignTop="@+id/buttonCenter"
        android:layout_toLeftOf="@+id/textView5"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="top|left"
        android:id="@+id/textView10"
        android:textSize="9sp"
        android:layout_above="@+id/textView7"
        android:layout_alignLeft="@+id/buttonCenter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="top|right"
        android:id="@+id/textView11"
        android:textSize="9sp"
        android:layout_above="@+id/textView7"
        android:layout_alignRight="@+id/buttonCenter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bottom|left"
        android:id="@+id/textView12"
        android:textSize="9sp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/buttonCenter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bottom|right"
        android:id="@+id/textView13"
        android:textSize="9sp"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/buttonCenter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="base|below"
        android:id="@+id/textView16"
        android:textSize="9sp"
        android:layout_below="@+id/buttonCenter"
        android:layout_alignBaseline="@id/buttonCenter"/>

</RelativeLayout>
